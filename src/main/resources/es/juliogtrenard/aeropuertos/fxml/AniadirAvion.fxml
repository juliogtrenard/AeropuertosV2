<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane stylesheets="@../styles/style.css" hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="400.0" prefWidth="600.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/22"
          fx:controller="es.juliogtrenard.aeropuertos.controladores.AniadirAvionController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="50.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="DATOS DEL AVIÓN" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <Label text="Módelo:" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
    <TextField fx:id="txtModelos" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Asientos:" GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
    <TextField fx:id="txtAsientos" maxWidth="-Infinity" prefWidth="100.0" GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>
    <Label text="Velocidad Máxima:" GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
    <TextField fx:id="txtVelMax" maxWidth="-Infinity" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <RadioButton fx:id="rbActivado" mnemonicParsing="false" selected="true" text="Activado" GridPane.halignment="CENTER"
                 GridPane.rowIndex="4">
        <toggleGroup>
            <ToggleGroup fx:id="rbGroup"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="rbDesactivado" mnemonicParsing="false" text="Desactivado" toggleGroup="$rbGroup"
                 GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label text="Aeropuerto:" GridPane.halignment="RIGHT" GridPane.rowIndex="5"/>
    <ComboBox fx:id="cbAeropuerto" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <FlowPane alignment="CENTER" hgap="50.0" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2"
              GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER">
        <Button mnemonicParsing="false" onAction="#guardar" text="Guardar"/>
        <Button mnemonicParsing="false" onAction="#cancelar" text="Cancelar"/>
    </FlowPane>
</GridPane>
